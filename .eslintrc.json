{
    "ignorePatterns": ["dist", "node_modules"],
    "rules": {
        "max-len": [
            "error",
            {
                "ignoreUrls": true,
                "code": 100
            }
        ],
        "no-unused-vars": "off",
        "prefer-template": "off",
        "indent": [1, 4],
        "object-curly-spacing": 1,
        "no-multiple-empty-lines": [
            1,
            {
                "max": 1,
                "maxEOF": 1
            }
        ],
        "no-param-reassign": [
            "error",
            {
                "props": true,
                "ignorePropertyModificationsFor": ["state"]
            }
        ],
        "no-var": 1,
        "camelcase": 1,
        "no-new-wrappers": 1,
        "no-nested-ternary": 1,
        "no-console": 0,
        "no-template-curly-in-string": 1,
        "no-self-compare": 1,
        "import/prefer-default-export": 0,
        "func-names": [1, "as-needed"],
        "arrow-body-style": 1,
        "semi": [1, "always"],
        "import/no-extraneous-dependencies": [
            "off",
            { "devDependencies": false }
        ]
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:vue/vue3-recommended",
        "plugin:react/recommended",
        "eslint:recommended",
        "airbnb-base",
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": ["prettier", "react"],
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "config/webpack.common.js"
            }
        }
    }
}
